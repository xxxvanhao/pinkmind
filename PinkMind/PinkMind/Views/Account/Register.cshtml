
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<main>
    <div class="container">
        <div class="page-intro text-center">
            <h1>PinkMind</h1>
            <p>
               Register PinkMind with your email
            </p>
        </div>
        <div class="page-content">
            <form method="post" action="">
                <div class="form-field">
                    <label>Full Name</label>
                    <input class="form-control" name="" type="text" placeholder="" />
                </div>
                <div class="form-field">
                    <label>Email</label>
                    <input class="form-control" name="" type="text" placeholder="" />
                </div>
                <div class="form-field">
                    <label>Password</label>
                    <input class="form-control" name="" type="text" placeholder="" />
                    <div class="password-strength">
                        <div class="password-strength__meter">
                            <div class="strength-level"></div>
                            <div class="strength-level"></div>
                            <div class="strength-level"></div>
                            <div class="strength-level"></div>
                            <div class="strength-level"></div>                            
                        </div>
                        <p>Password strength</p>
                    </div>
                </div>
                <div class="form-field">
                    <input type="checkbox" id="autoSignin" name="autoSignin" value="on">
                    <label for="autoSignin" class="keep-login">It's ok to send me emails about PinkMind's products and services.</label>                    
                </div>
                <div class="form-field text-center">                    
                    <button class="btn btn-signin" type="submit" value="Login">Sign Up</button>
                </div>
            </form>
            <div class="signup-link text-center">
                <label>By signing up, I agree to PinkMind <a href="#"> Terms of Servic</a> and <a href="#">Privacy Policy.</a></label>
            </div>
        </div>
    </div>
</main>


